.AccountPage
  .AccountPage__form
    .AccountPage__title
      %h3 アカウントの編集 
    = form_for(current_user) do |f|
      .FormField
        .FormField__label--normal
          = f.label :名前
        .FormField__input--normal
          = f.text_field :name, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :アイコン
        .FormField__input--normal
          = f.file_field :image, autofocus: true
      .FormField
        .FormField__label--normal
          = f.label :メールアドレス
        .FormField__input--normal
          = f.email_field :email
      .Button
        = f.submit "更新", class: 'Button1'
        .Button2
          = link_to "ログアウト", destroy_user_session_path, method: :delete
      = link_to "トップページに戻る", :back, class: 'Button3'