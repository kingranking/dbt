.Side
  .LeftHeader
    .LeftHeader__List
      %h3.LeftHeader__userName
        = current_user.name
      %ul.LeftHeader__iconList
        - if current_user.admin?
          %li.LeftHeader__Icon
            = link_to new_group_path do
              = icon('fas', 'plus', class: 'Close__icon')
        %li.LeftHeader__Icon
          = link_to edit_user_path(current_user) do
            = icon('fas', 'user-cog')    
  .Content
    .Search
      %input.Search__bar{type: 'text', placeholder: '検索'}
        = icon('fas', 'search', class: 'Search__icon')
    .Subjects
      - groups.each do |group|
        .Subject
          = link_to '' do
            = group.name

          
            
      