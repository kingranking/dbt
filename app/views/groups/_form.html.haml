= form_with model: group, local: true do |f|
  - if group.errors.any?
    .SettingGroupForm__errors
      %h2= "#{group.errors.full_messages.count}件のエラーが発生しました。"
      %ul
        - group.errors.full_messages.each do |message|
          %li message
  .SettingGroupForm__field
    .SettingGroupForm__leftField
      = f.label :name, "論題名", class: 'SettingGroupForm__label'
    .SettingGroupForm__rightField
      = f.text_field :name, class: 'SettingGroupForm__input', placeholder: "論題名"
    .SettingGroupForm__leftField
      = f.label :detail, "詳細", type: 'text', class: 'SettingGroupForm__label'
    .SettingGroupForm__rightField
      = f.text_area :detail, class: 'SettingGroupForm__input', placeholder: "詳細"
  .SettingGroupForm__field
    .SettingGroupForm__leftField
    .SettingGroupForm__rightField
      = f.submit "保存", class: 'SettingGroupForm__button'